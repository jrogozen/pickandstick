var app = angular.module("sploogeApp", ['ngResource', 'ngRoute']);

app.config(function($routeProvider){
  $routeProvider

  .when("/league", {
    templateUrl: "<%= asset_path('angular/templates/league.html') %>",
    controller: "LeagueController"
  })
  .when("/users", {
    templateUrl: "<%= asset_path('angular/templates/users.html') %>",
    controller: "UserController"
  })
  .when("/users/login", {
    templateUrl: "<%= asset_path('angular/templates/user-login.html') %>",
    controller: "UserController"
  })
  .when("/users/new", {
    templateUrl: "<%= asset_path('angular/templates/new-user.html') %>",
    controller: "UserController"
  })
  .when("/users/profile", {
    templateUrl: "<%= asset_path('angular/templates/my-user-profile.html') %>",
    controller: "UserController"
  })
  .when("/users/:id", {
    templateUrl: "<%= asset_path('angular/templates/user-profile.html') %>",
    controller: "UserController"
  })
  .when("/matchups/new", {
    templateUrl: "<%= asset_path('angular/templates/new-matchup.html') %>",
    controller: "MatchupController"
  });

})